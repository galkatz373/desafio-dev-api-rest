{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
